<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <record id="consolidate_stock_move_from" model="ir.ui.view">
            <field name="name">Stock Move Report at Date</field>
            <field name="model">stock.move.consolidation</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>

                    <footer>
                        <button name="stock_move_till_date" string="View" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Consolidate Stock Moves"
            res_model="stock.move.consolidation"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_consolidate_stock_move"/>

        <menuitem action="action_consolidate_stock_move" id="menu-action_consolidate_stock_move" parent="stock.menu_traceability" sequence="3" groups="stock.group_stock_manager"/>

    </data>
</openerp>
